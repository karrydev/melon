/* pages/home.wxss */
.top-image {
  width: 100%;
  height: 400rpx;
}

.scroll-item {
  display: flex;
  flex-direction: row;
  margin: 20rpx;
}

.scroll-item-image {
  width: 200rpx;
  height: 200rpx;
}

.scroll-item-contents {
  flex: 1;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
}

.scroll-item-contents__title {
  font-size: 26rpx;
  flex: 1;
  margin-right: 10rpx;
}

.scroll-item-contents__time {
  font-size: 24rpx;
  position: relative;
  bottom: -30rpx;
}

.scroll-item-contents__btn {
  font-size: 26rpx !important;
  padding: 6rpx 50rpx !important;
}
